--Chef table
CREATE OR REPLACE VIEW CHEF_VIEW AS
SELECT c.Emp_ID, c.Salary_Amt, c.Num_Hours_Worked, e.Emp_Fname, e.Emp_Lname
FROM CHEF c
JOIN EMPLOYEE e ON c.Emp_ID = e.Emp_ID
WHERE c.Salary_Amt > 4000;

-- Manager table 
CREATE OR REPLACE VIEW MANAGER_VIEW AS
SELECT m.Emp_ID, m.Salary_Amt, m.Num_Hours_Worked, e.Emp_Fname, e.Emp_Lname
FROM MANAGER m
JOIN EMPLOYEE e ON m.Emp_ID = e.Emp_ID
WHERE m.Num_Hours_Worked >= 40;

-- Waiter table
CREATE OR REPLACE VIEW WAITER_VIEW AS
SELECT w.Emp_ID, w.Salary_Amt, w.Num_Hours_Worked, e.Emp_Fname, e.Emp_Lname
FROM WAITER w
JOIN EMPLOYEE e ON w.Emp_ID = e.Emp_ID
WHERE e.Emp_Lname LIKE 'S%';

-- Security table
CREATE OR REPLACE VIEW SECURITY_VIEW AS
SELECT s.Emp_ID, s.Salary_Amt, s.Num_Hours_Worked, e.Emp_Fname, e.Emp_Lname
FROM SECURITY s
JOIN EMPLOYEE e ON s.Emp_ID = e.Emp_ID
WHERE s.Salary_Amt BETWEEN 3000 AND 4000;

-- Bartender table
CREATE OR REPLACE VIEW BARTENDER_VIEW AS
SELECT b.Emp_ID, b.Salary_Amt, b.Num_Hours_Worked, e.Emp_Fname, e.Emp_Lname
FROM BARTENDER b
JOIN EMPLOYEE e ON b.Emp_ID = e.Emp_ID
WHERE b.Num_Hours_Worked < 30;

-- Hostess table
CREATE OR REPLACE VIEW HOSTESS_VIEW AS
SELECT h.Emp_ID, h.Salary_Amt, h.Num_Hours_Worked, e.Emp_Fname, e.Emp_Lname
FROM HOSTESS h
JOIN EMPLOYEE e ON h.Emp_ID = e.Emp_ID
WHERE e.Emp_Fname = '%a%';
